<div class="splash-img"></div>

<div class="uk-container uk-padding-large intro">
	
	<div uk-grid>
		<div class="uk-width-1-3@m">
			<div class="uk-card uk-card-default uk-card-body">
				<form id="login-form">
					<div class="uk-margin">
						<label for="login-email">Email Address</label>
						<input class="uk-input" type="email" id="login-email">
					</div>
					<div class="uk-margin">
						<label for="password">Password</label>
						<input class="uk-input" type="password" id="login-password">
					</div>
					<button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">
						<i class="fas fa-key"></i> Login
					</button>
				</form>
				<a class="uk-button uk-button-default uk-width-1-1" href="#signup" uk-toggle>
					<i class="fas fa-plus"></i> Sign Up
				</a>
			</div>
		</div>
	
		<div class="uk-width-2-3@m">
			<div class="uk-card uk-card-default uk-card-body">
				<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Necessitatibus vitae tempore nesciunt voluptas earum, aliquid sed pariatur sapiente doloremque aperiam architecto voluptatum nulla est, praesentium omnis voluptatibus cum rem. Fugit?</p>
				<ul>
					{{#each majorIndices as |index|}}

					<li>{{index}}</li>
					{{!-- <li>Dow Jones: {{dow}}</li>
					<li>Nasdaq</li>
					<li>Russell 2000</li>
					<li>Bitcoin</li>
					<li>Dogecoin</li>
					<li>10-years Treasuries</li>
					<li>Fed Interest Rate</li> --}}
					{{/each}}
				</ul>
			</div>
		</div>
	</div>
	
	
	<!-- Modal Sign Up -->
	<div id="signup" uk-modal>
		<div class="uk-modal-dialog uk-modal-body">
				<button class="uk-modal-close-default" type="button" uk-close></button>
				
				<form id="signup-form">
					<div class="uk-margin">
						<label for="first-name">First Name</label>
						<input class="uk-input" type="text" id="first-name">
					</div>
					<div class="uk-margin">
						<label for="last-name">Last Name</label>
						<input class="uk-input" type="text" id="last-name">
					</div>
					<div class="uk-margin">
						<label for="signup-email">Email</label>
						<input class="uk-input" type="text" id="signup-email">
					</div>
					<div class="uk-margin">
						<label for="signup-password">Password</label>
						<input class="uk-input" type="password" id="signup-password">
					</div>
					<button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">
						<i class="fas fa-user-plus"></i> Create Account
					</button>
				</form>
		</div>
	</div>
	
</div>

