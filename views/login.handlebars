<div class="splash-img"></div>

<div class="uk-container uk-padding-large uk-width-1-1 intro">
	
	<div class="uk-grid-match" uk-grid>
		<!-- Login FOrm -->
		<div class="uk-width-1-3@m">
			<div class="uk-card uk-card-default uk-card-body">
				<form id="login-form">
					<div class="uk-margin">
						<label for="login-email">Email Address</label>
						<input class="uk-input" type="email" id="login-email">
					</div>
					<div class="uk-margin">
						<label for="password">Password</label>
						<input class="uk-input" type="password" id="login-password">
					</div>
					<button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">
						<i class="fas fa-key"></i> Login
					</button>
				</form>
				<a class="uk-button uk-button-default uk-width-1-1" href="#signup" uk-toggle>
					<i class="fas fa-plus"></i> Sign Up
				</a>
			</div>
		</div>
		<!-- Market Stats -->
		<div class="uk-width-2-3@m">
			<div class="uk-card uk-card-default uk-card-body">
				<h2 class="uk-text-center uk-text-large"><i class="fas fa-chart-area"></i> Market Indexes</h2>
				<table class="uk-table uk-table-divider">
					<thead>
						<tr>
								<th>Index</th>
								<th>Weighted Value</th>
								<th>Market Movement</th>
						</tr>
				</thead>
					<tbody>
							<tr>
									<td>Dow Jones</td>
									<td>{{DJI}}</td>
									<td class="index-{{index_up_down DJIDelta}}"><i class="fas fa-caret-{{index_up_down DJIDelta}}"></i> {{DJIDelta}}%</td>
							</tr>
							<tr>
									<td>Nasdaq</td>
									<td>{{IXIC}}</td>
									<td class="index-{{index_up_down IXICDelta}}"><i class="fas fa-caret-{{index_up_down IXICDelta}}"></i> {{IXICDelta}}%</td>
							</tr>
							<tr>
									<td>S&P 500</td>
									<td>{{GSPC}}</td>
									<td class="index-{{index_up_down SPDelta}}"><i class="fas fa-caret-{{index_up_down SPDelta}}"></i> {{SPDelta}}%</td>
							</tr>
							<tr>
									<td>Russell 2000</td>
									<td>{{RUT}}</td>
									<td class="index-{{index_up_down RUTDelta}}"><i class="fas fa-caret-{{index_up_down RUTDelta}}"></i> {{RUTDelta}}%</td>
							</tr>
					</tbody>
				</table>
					
			</div>
		</div>
	</div>
	
	
	<!-- Modal Sign Up -->
	<div id="signup" uk-modal>
		<div class="uk-modal-dialog uk-modal-body">
				<button class="uk-modal-close-default" type="button" uk-close></button>
				
				<form id="signup-form">
					<div class="uk-margin">
						<label for="first-name">First Name</label>
						<input class="uk-input" type="text" id="first-name">
					</div>
					<div class="uk-margin">
						<label for="last-name">Last Name</label>
						<input class="uk-input" type="text" id="last-name">
					</div>
					<div class="uk-margin">
						<label for="signup-email">Email</label>
						<input class="uk-input" type="text" id="signup-email">
					</div>
					<div class="uk-margin">
						<label for="signup-password">Password</label>
						<input class="uk-input" type="password" id="signup-password">
					</div>
					<button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">
						<i class="fas fa-user-plus"></i> Create Account
					</button>
				</form>
		</div>
	</div>
	
</div>

